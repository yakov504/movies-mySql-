<%- include('partials/header.ejs') %>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="add-movie-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="movieName" id="movie-name" placeholder="Movie Name" required>
                </div>
                <div class="form-group col-md-4">
                    <select id="genere" name="genere" class="form-control" required>
                        <option selected disabled>Choose genere</option>
                        <option>Action</option>
                        <option>Comedy</option>
                        <option>Drama</option>
                        <option>Else</option>
                    </select>
                </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="year" id="year" placeholder="year" required>
                </div>
                <div class="form-group col-md-4">
                    <select id="country" name="country" class="form-control" required>
                        <option selected disabled>Choose country</option>
                        <option>Israel</option>
                        <option>Canada</option>
                        <option>Use</option>
                        <option>France</option>
                        <option>Else</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="movie_img"><b>Movie Image</b></label><br>
                    <input type="file" name="movie_img" id="movie_img" class="" required>
                </div>
            </div>
            <div class="form-group col-md-6">
                <input type="number" class="form-control" name="movie_time" id="movie_time" placeholder="Movie Time" required>
            </div>
            </div>
            <button type="submit" class="btn btn-primary float-right">Add Movie</button>
        </form>
    </div>
</div>
</body>
</html>